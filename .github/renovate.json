{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>shiron-dev/renovate-config"
  ],
  "ignoreDeps": [
    "macauley/action-homebrew-bump-cask"
  ],
  "github-actions": {
    "packageRules": [
      {
        "matchPackageNames": [
          "Homebrew/actions/**"
        ],
        "automerge": true
      }
    ]
  }
}
